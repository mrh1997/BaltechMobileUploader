{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2017"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "~/drivers/*": ["app/drivers/*.mock"],
      "~/*": ["app/*"],
      "@/*": ["app/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["app", "tests"],
  "exclude": ["node_modules", "platforms", "hooks"]
}
